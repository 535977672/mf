    //事件
    private function receiveEvent($object)
    {
        $content = "";
        switch ($object->Event)
        {
            //subscribe(订阅/关注)、unsubscribe(取消订阅)
            case "subscribe":
                $content = "欢迎关注马飞工作室！";
                $result = $this->transmitText($object, $content);
                break;
            case "unsubscribe":
                $content = "取消关注";//后台维护
                $result = $this->transmitText($object, $content);
                break;
            //扫描带参数二维码事件
            //自定义菜单事件
            case "CLICK":
                $result = $this->receiveClick($object);
                break;
            case "VIEW":
                $result = $this->receiveView($object);
                break;
            //上报地理位置事件
            case "LOCATION":
                $location_X = trim($object->Latitude);
                $location_Y = trim($object->Longitude);
                $precision = trim($object->Precision); 
                $content = "\n上报地理位置\n维度:$location_X\n经度:$location_Y\n地理位置精度:$precision";
                $result = $this->transmitText($object, $content);
                break;
        }
        
        return $result;
    }

